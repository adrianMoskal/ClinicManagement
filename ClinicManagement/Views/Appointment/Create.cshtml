@model ClinicManagement.Models.AppointmentCreateViewModel

@{
    ViewBag.Title = "Create appointment";
}

<div class="main-container">
    <div class="filters-box">
        @using (Html.BeginForm("Create", "Appointment", FormMethod.Post))
        {
            <div>
                @Html.LabelFor(m => m.Doctors)
                @Html.DropDownListFor(m => m.DoctorId, Model.Doctors, "Name", new { @class = "form-select" })
            </div>
            <button type="submit" class="btn btn-primary">Show working hours</button>
        }
    </div>
</div>

@section Styles {
    <link href="@Url.Content("~/css/appointments.css")" rel="stylesheet" type="text/css" />
}

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/datatables.net/jquery.dataTables.min.js"></script>
    <script src="~/js/datatable.js"></script>
}
