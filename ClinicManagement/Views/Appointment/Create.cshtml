@model ClinicManagement.Models.AppointmentCreateViewModel

@{
    ViewBag.Title = "Create appointment";
}

<div class="main-container">
    <div class="filters-box">
        @using (Html.BeginForm("Create", "Appointment", FormMethod.Post))
        {
        <div class="form-group">
            <label for="SpecialtyId">Specialties</label>
            <select name="SpecialtyId" id="SpecialtyId" class="form-select">
            </select>
        </div>

            <div class="form-group">
                <label for="DoctorId">Doctors</label>
                <select name="DoctorId" id="DoctorId" class="form-select" disabled>
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Check availability</button>
            </div>
        }
    </div>
    @if (Model.Doctor != null)
    {
        <div class="doctor-availability">
            <p>
                <b>Doctor:</b> @Model.Doctor.FullName
            </p>
            <p>
                <b>Specialty:</b> @Model.Specialty.Name
            </p>
            <p>
                <b>Date:</b> <input type="date" />
            </p>
        </div>
    }
</div>

@section Styles {
    <link href="@Url.Content("~/css/appointments.css")" rel="stylesheet" type="text/css" />
}

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/appointments.js"></script>
}
