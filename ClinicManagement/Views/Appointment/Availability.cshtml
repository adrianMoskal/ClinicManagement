@model ClinicManagement.Models.AppointmentCreateViewModel

@{
    ViewBag.Title = "Create appointment";
}

<div class="main-container">
    <div class="filters-box">
        @using (Html.BeginForm("Availability", "Appointment", FormMethod.Post))
        {
            <div class="form-group">
                <label for="SpecialtyId">Specialties</label>
                <select name="SpecialtyId" id="SpecialtyId" class="form-select">
                </select>
            </div>

            <div class="form-group">
                <label for="DoctorId">Doctors</label>
                <select name="DoctorId" id="DoctorId" class="form-select" @(Model.Doctor == null ? "disabled" : "")>
                    @if (Model.Doctor != null)
                    {
                        <option value="@Model.DoctorId">@Model.Doctor.FullName</option>
                    }
                </select>
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary">Check availability</button>
            </div>
        }
    </div>
    @if (Model.Doctor != null)
    {
        <div class="doctor-availability">
            <div class="left">
                <p>
                    <b>Doctor:</b> @Model.Doctor.FullName
                </p>
                <p>
                    <b>Specialty:</b> @Model.Specialty.Name
                </p>
                <p>
                    <b>Date:</b> <span id="calendar-value">Pick date</span>
                    <div id="calendar"></div>
                </p>
            </div>
            <div class="right">
                @foreach (var hour in Model.AppointmentHours)
                {
                    <p>@hour.Hour</p>
                }
            </div>
        </div>
    }
</div>

@section Styles {
    <link href="~/lib/jqueryui/themes/ui-lightness/jquery-ui.css" rel='stylesheet' />
    <link href="~/css/appointments.css" rel="stylesheet" type="text/css" />
}

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/js/datepicker.js"></script>
    <script src="~/js/appointments.js"></script>
}