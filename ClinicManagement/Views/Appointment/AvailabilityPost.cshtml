@model ClinicManagement.Models.AvailabilityViewModel

@{
    ViewBag.Title = "Create appointment";
}

<div class="main-container">
    @using (Html.BeginForm("Create", "Appointment", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.DoctorId)
        @Html.HiddenFor(model => model.SpecialtyId)
        <div class="selected-filters-box">
            <div class="form-group">
                <label for="SpecialtyId">Specialties</label>
                <select name="SpecialtyId" id="SpecialtyId" class="form-select">
                    <option value="@Model.SpecialtyId">@Model.Specialty.Name</option>
                </select>
                @Html.ValidationMessageFor(model => model.SpecialtyId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="DoctorId">Doctors</label>
                <select name="DoctorId" id="DoctorId" class="form-select">
                    <option value="@Model.DoctorId">@Model.Doctor.FullName</option>
                </select>
                @Html.ValidationMessageFor(model => model.DoctorId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Check availability</button>
            </div>
        </div>
        <div class="doctor-availability">
            <form>
                <div class="mb-3">
                    <label for="date" class="form-label">Pick date</label>
                    <input type="date" class="form-control" id="date">
                </div>
                <div class="mb-3">
                    <label for="hour" class="form-label">Pick hour</label>
                    <select name="hour" id="hour" class="form-select" disabled>
                    </select>
                </div>
            </form>

            @Html.ValidationSummary()
        </div>
    }
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/datepicker/1.0.10/datepicker.css" rel='stylesheet' />
    <link href="~/css/appointments.css" rel="stylesheet" type="text/css" />
}

@section Scripts{
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js" integrity="sha256-0YPKAwZP7Mp3ALMRVB2i8GXeEndvCq3eSl/WsAl1Ryk=" crossorigin="anonymous"></script>
    <script src="~/js/appointments.js"></script>
}