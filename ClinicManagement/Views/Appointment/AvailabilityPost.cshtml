@model ClinicManagement.Models.AvailabilityPostViewModel

@{
    ViewBag.Title = "Create appointment";
}

<div class="main-container">
    @using (Html.BeginForm("Create", "Appointment", FormMethod.Post))
    {
        <div class="filters-box">
            <div class="form-group">
                <label for="SpecialtyId">Specialties</label>
                <select name="SpecialtyId" id="SpecialtyId" class="form-select">
                    <option value="@Model.SpecialtyId">@Model.Specialty.Name</option>
                </select>
                @Html.ValidationMessageFor(model => model.SpecialtyId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="DoctorId">Doctors</label>
                <select name="DoctorId" id="DoctorId" class="form-select">
                    <option value="@Model.DoctorId">@Model.Doctor.FullName</option>
                </select>
                @Html.ValidationMessageFor(model => model.DoctorId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Check availability</button>
            </div>
        </div>
        <div class="doctor-availability">
            <div class="left">
                <div>
                    <p>
                        <b>Date:</b> @Html.TextBoxFor(model => model.Date, "", new { id = "calendar-value" })
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                    </p>
                    <p>
                        <b>Hour:</b> @Html.TextBoxFor(model => model.Hour, "", new { id = "hour-value" })
                        @Html.ValidationMessageFor(model => model.Hour, "", new { @class = "text-danger" })
                    </p>
                    <div id="calendar"></div>
                </div>
                <p><input type="submit" /></p>
            </div>
            <div class="right" id="hours">
            </div>
        </div>
    }
</div>

@section Styles {
    <link href="~/lib/jqueryui/themes/ui-lightness/jquery-ui.css" rel='stylesheet' />
    <link href="~/css/appointments.css" rel="stylesheet" type="text/css" />
}

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/js/datepicker.js"></script>
    <script src="~/js/appointments.js"></script>
}