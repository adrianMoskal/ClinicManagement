@model ClinicManagement.Models.AvailabilityPostViewModel

@{
    ViewBag.Title = "Create appointment";
}

<div class="main-container">
    @using (Html.BeginForm("Create", "Appointment", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.DoctorId)
        @Html.HiddenFor(model => model.SpecialtyId)
        <div class="selected-filters-box">
            <div class="form-group">
                <label for="SpecialtyId">Specialties</label>
                <select name="SpecialtyId" id="SpecialtyId" class="form-select" disabled>
                    <option value="@Model.SpecialtyId">@Model.Specialty.Name</option>
                </select>
                @Html.ValidationMessageFor(model => model.SpecialtyId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="DoctorId">Doctors</label>
                <select name="DoctorId" id="DoctorId" class="form-select" disabled>
                    <option value="@Model.DoctorId">@Model.Doctor.FullName</option>
                </select>
                @Html.ValidationMessageFor(model => model.DoctorId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Check availability</button>
            </div>
        </div>
        <div class="doctor-availability">
            <div class="left">
                <div>
                    <div class="form-group pt-3">
                        <b>Date:</b> @Html.TextBoxFor(model => model.Date, "", new { id = "calendar-value", @readonly = "readonly", placeholder = "Pick date (dd/mm/yyyy)" })
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })<i class="bi bi-calendar" id="calendar"></i>
                    </div>
                    <div class="form-group pt-1">
                        <b>Hour:</b> @Html.TextBoxFor(model => model.Hour, "", new { id = "hour-value", @readonly = "readonly", placeholder = "Pick hour" })
                        @Html.ValidationMessageFor(model => model.Hour, "", new { @class = "text-danger" })
                    </div>
                </div>

                @Html.ValidationSummary()

                <div class="form-group pt-1">
                    <button type="submit" class="btn btn-primary">Make an appointment</button>
                </div>
            </div>
            <div class="right" id="hours">
            </div>
        </div>
    }
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/datepicker/1.0.10/datepicker.css" rel='stylesheet' />
    <link href="~/css/appointments.css" rel="stylesheet" type="text/css" />
}

@section Scripts{
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js" integrity="sha256-0YPKAwZP7Mp3ALMRVB2i8GXeEndvCq3eSl/WsAl1Ryk=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datepicker/1.0.10/datepicker.js"></script>
    <script src="~/js/datepicker.js"></script>
    <script src="~/js/appointments.js"></script>
}